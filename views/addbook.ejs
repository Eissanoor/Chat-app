<%-include('parts/top.ejs')%>
<%-include('parts/second-nav.ejs')%>


<header class="row tm-welcome-section">
  <h2 class="col-12 text-center tm-section-title">Add book</h2>
</header>
<div style="margin-top: 10px;" class="tm-container-inner-2 tm-contact-section">
    <div class="row">
        <div class="col-md-6">
            <form action="/addbook" method="POST" class="tm-contact-form" enctype="multipart/form-data">
                <div class="form-group">
                  <input type="text" name="title" class="form-control" placeholder="Book Title" required/>
                </div>

                <div class="form-group">
                    <textarea type="text" name="description" class="form-control" placeholder="Book Description" required></textarea>
                  </div>
                
                <div class="form-group">
                  <input type="number" name="price" class="form-control" placeholder="price" required />
                </div>

                <div class="form-group">
                    <p style="color: #2F956D;">add image</p>
                  <input type="file" accept=".png,.jpg,.jpeg" name="image">
                </div>
                <button type="submit" class="tm-btn tm-btn-success tm-btn-right">
                  Add Book
                </button>
              </div>
            </form>
        </div>
</div>







<%-include('parts/bottom.ejs')%>